<script>
    document.addEventListener("scroll", () => {
        document.querySelectorAll("section").forEach((element) => {
            let top = window.scrollY
            let distance = element.offsetTop - (window.scrollY * 0.7)
            // let otherDistance = element.offsetTop
            // console.log({ top, distance, otherDistance })
            let hash = `#${element.getAttribute("id")}`
            // console.log({ locationhash: location.hash, hash })
            if (
                distance < top &&
                top < distance + element.offsetHeight &&
                location.hash != hash
            ) {
                history.pushState({}, "", hash)
                // window.location.hash = (hash);
                // currentHash = hash;
            }
        })
    })
</script>

