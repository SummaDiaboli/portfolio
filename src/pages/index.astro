<script>
    document.addEventListener("scroll", () => {
        document.querySelectorAll("section").forEach((element) => {
            let top = window.scrollY
            let distance = element.offsetTop - window.scrollY * 0.5
            // let otherDistance = element.offsetTop
            // console.log({ top, distance, otherDistance })
            let hash = `#${element.getAttribute("id")}`

            // console.log({ locationhash: location.hash, hash })
            if (
                distance < top &&
                top < distance + element.offsetHeight &&
                location.hash !== hash
            ) {
                history.replaceState({}, "", hash)
                // history.pushState({}, "", hash)
                // TODO: Replace with better implementation
                if (hash === "#experience") {
                    document
                        .getElementById("experienceLink")
                        ?.setAttribute(
                            "class",
                            "flex max-w-fit flex-row items-center gap-x-2 group text-slate-200"
                        )
                    document
                        .getElementById("experienceLinkDash")
                        ?.setAttribute(
                            "class",
                            "group-hover:w-14 group-hover:bg-slate-200 transition-all w-14 h-[0.08rem] bg-slate-200"
                        )

                    document
                        .getElementById("aboutLink")
                        ?.setAttribute(
                            "class",
                            "flex max-w-fit flex-row items-center gap-x-2 group text-slate-500"
                        )

                    document
                        .getElementById("aboutLinkDash")
                        ?.setAttribute(
                            "class",
                            "group-hover:w-14 group-hover:bg-slate-200 transition-all w-7 h-[0.08rem] bg-slate-500"
                        )
                } else {
                    document
                        .getElementById("aboutLink")
                        ?.setAttribute(
                            "class",
                            "flex max-w-fit flex-row items-center gap-x-2 group text-slate-200"
                        )
                    document
                        .getElementById("aboutLinkDash")
                        ?.setAttribute(
                            "class",
                            "group-hover:w-14 group-hover:bg-slate-200 transition-all w-14 h-[0.08rem] bg-slate-200"
                        )

                    document
                        .getElementById("experienceLink")
                        ?.setAttribute(
                            "class",
                            "flex max-w-fit flex-row items-center gap-x-2 group text-slate-500"
                        )

                    document
                        .getElementById("experienceLinkDash")
                        ?.setAttribute(
                            "class",
                            "group-hover:w-14 group-hover:bg-slate-200 transition-all w-7 h-[0.08rem] bg-slate-500"
                        )
                }
                // console.log(element.nextSibling)
                // document
                //     .getElementById(`${element.getAttribute("id")}Link`)
                //     ?.setAttribute(
                //         "class",
                //         "flex max-w-fit flex-row items-center gap-x-2 group text-slate-200"
                //     )
                // window.location.hash = (hash);
                // currentHash = hash;
            }
        })
    })
</script>

